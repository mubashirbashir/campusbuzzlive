<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.campusbuzzlive.campusbuzzlive.ForgotPassword"
    android:background="@android:color/white">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbarSize="@dimen/activity_vertical_margin"
        android:scrollbarStyle="outsideOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:baselineAligned="false">

    <Button
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFeedbackForum"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:height="60dp"
        android:background="@android:color/white"
        android:textAllCaps="false"
        android:textColor="@color/buzzcolor"
        android:textSize="22sp"
        android:clickable="false" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/tilEmailFind"
        android:layout_below="@+id/bFeedbackForum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_below="@+id/bFeedbackForum"
            android:id="@+id/etEmailFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:maxLength="25"
           android:layout_marginTop="5dp"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tilEnrollFind"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tilEmailFind"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_below="@+id/tilEmailFind"
            android:layout_marginTop="5dp"
            android:id="@+id/etEnrollFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Enrollment ID"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bSearch"
        android:layout_below="@id/tilEnrollFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/buzzcolor"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tilOtp"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/bNext"
        android:layout_toStartOf="@+id/bNext">

        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/bSearch"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:id="@+id/etOtp"
            android:inputType="number"
            android:maxLength="4"
            android:singleLine="true"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:enabled="false"
        android:id="@+id/bNext"
        android:layout_below="@+id/tilOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/buzzcolor"
        android:onClick="add"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="visible" />
            </RelativeLayout>
    </ScrollView>

</RelativeLayout>

