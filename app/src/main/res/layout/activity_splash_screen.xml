<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.Design.Light.NoActionBar"
    tools:context="com.campusbuzzlive.campusbuzzlive.splashScreen">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/buzzcolor"
        android:backgroundTintMode="src_atop"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:layout_width="160dp"

            android:layout_height="160dp"
            android:background="@mipmap/ic_logo_w"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="   Keeping University Pulsating..."
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
