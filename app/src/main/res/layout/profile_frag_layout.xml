<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="20dp"
    tools:context="com.campusbuzzlive.campusbuzzlive.ChangePassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="10dp"
       android:orientation="vertical">



        <ImageView
            android:id="@+id/ivDP"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"



            android:background="@color/buzzcolor"
            android:scaleType="fitXY"
            android:padding="1dp"
            />
       <Button
           android:id="@+id/bName"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="left|center"


           android:layout_marginTop="15dp"
           android:background="@android:color/white"


           android:text="name"


           android:textAllCaps="false"
           android:textSize="18sp" />
       <Button
           android:id="@+id/benroll"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="left|center"


           android:layout_marginTop="15dp"
           android:background="@android:color/white"


           android:text="enroll"


           android:textAllCaps="false"
           android:textSize="18sp" />
       <Button
           android:id="@+id/bGender"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"


           android:background="@android:color/white"


           android:gravity="left|center"

           android:text="gender"

           android:textAllCaps="false"
           android:textSize="18sp" />

       <Button
           android:id="@+id/bDepartment"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"


           android:background="@android:color/white"


           android:gravity="left|center"

           android:text="department"

           android:textAllCaps="false"
           android:textSize="18sp" />


       <Button
           android:id="@+id/bChangePW"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"


           android:background="@android:color/white"
           android:drawableRight="@drawable/ic_edit_black_24dp"
           android:gravity="left|center"
           android:onClick="add"
           android:text="*********"
           android:textColor="@color/buzzcolor"

           android:textAllCaps="false"
           android:textSize="18sp" />


       <Button
            android:id="@+id/bEmail"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:gravity="left|center"
            android:drawableRight="@drawable/ic_mail_black_24dp"
            android:background="@android:color/white"
            android:onClick="add"
            android:text="Update Email"
           android:textColor="@color/buzzcolor"
            android:textAllCaps="false"
            android:textSize="18sp" />




        <Button
            android:id="@+id/bPhone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:drawableRight="@drawable/ic_phone_iphone_black_24dp"

            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:onClick="add"
            android:text="Update Mobile Number"
            android:textColor="@color/buzzcolor"

            android:textAllCaps="false"
            android:textSize="18sp" />

   </LinearLayout>
    </ScrollView>





</RelativeLayout>