<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.campusbuzzlive.campusbuzzlive.ChangePassword">


    <ImageView
        android:id="@+id/ivDP"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:background="@color/buzzcolor"
        android:padding="1dp"
        android:src="@color/buzzcolor1" />

    <ImageButton
        android:id="@+id/ibCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/ivDP"
        android:layout_alignEnd="@+id/ivDP"
        android:layout_alignRight="@+id/ivDP"
        android:onClick="add"
        app:srcCompat="@drawable/ic_camera_alt_white_18dp" />

</RelativeLayout>