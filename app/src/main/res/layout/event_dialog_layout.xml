<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/tvEventLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"


                android:layout_margin="10dp"
                android:layout_marginTop="40dp"
                android:text="Add an Event"
                android:textAlignment="center"

                android:textColor="@color/buzzcolor"
                android:textSize="36sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEnroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvEventLabel"
                android:layout_margin="10dp"
                android:textAlignment="center">

                <EditText
                    android:id="@+id/etEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEventLabel"
                    android:layout_margin="10dp"
                    android:hint="Event Tittle"
                    android:inputType="textPersonName|textCapWords"
                    android:singleLine="true"
                    android:textAlignment="center" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/bDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilEnroll"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_date_range_black_24dp"


                android:foregroundGravity="top"
                android:hint="Date:"
                android:textAlignment="center"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/bDate"
                android:layout_centerInParent="true"

                android:layout_margin="10dp"

                android:hint="Date:"

                android:text="Tap above to add date"
                android:textAlignment="center"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/bTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_access_time_blackdp"

                android:hint="Time:" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/bTime"

                android:layout_margin="10dp"

                android:hint="Time:"

                android:text="Tap above to add Time"
                android:textAlignment="center"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/bLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTime"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_add_location_black_24dp"


                android:hint="Date:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/bLoc"

                android:layout_centerInParent="true"
                android:layout_margin="10dp"

                android:hint="Location:"

                android:text="Tap above to add Location"
                android:textAlignment="center"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tvloc"
                android:layout_margin="10dp"

                android:background="@color/buzzcolor"
                android:enabled="false"
                android:text="ADD"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
